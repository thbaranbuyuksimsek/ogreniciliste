@model List<Bilisim.HelloMvc.Models.Ogrenci>

<h2>Öğrenci Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Ogrenciid</td>
                <td>@o.Ad</td>
                <td>@o.Soyad</td>
                <td>
                    <a href="/Ogrenci/OgrenciDetay/@o.Ogrenciid">Detay</a> |
                    <a href="/Ogrenci/Guncelle/@o.Ogrenciid">Güncelle</a> |
                    <a href="/Ogrenci/Sil/@o.Ogrenciid">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Yeni Öğrenci Ekle</h3>
<a class="btn btn-success" href="/Ogrenci/Yeni">Yeni Ekle</a>

<hr />

<h3>ID ile Öğrenci Getir</h3>
<form method="post" asp-action="GetirInput">
    <input type="number" name="id" placeholder="Öğrenci ID" required />
    <button type="submit">Getir</button>
</form>